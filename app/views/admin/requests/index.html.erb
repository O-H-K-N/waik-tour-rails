<% content_for(:title, t('.title')) %>
<div class="p-5">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-9 mb-3">
      <!-- 検索窓 -->
      <%= render 'search_form', url: admin_requests_path %>
    </div>
  </div>
  <% if @requests.present? %>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
          <tr>
            <th scope="col"><%= Request.human_attribute_name(:id) %></th>
            <th scope="col"><%= Request.human_attribute_name(:user) %></th>
            <th scope="col"><%= Request.human_attribute_name(:area) %></th>
            <th scope="col"><%= Request.human_attribute_name(:spot) %></th>
            <th scope="col"><%= Request.human_attribute_name(:check) %></th>
            <th scope="col"></th>
          </tr>
          </thead>
          <tbody>
          <!-- 一覧表示のフォーム -->
          <%= render partial: "request", collection: @requests %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <!-- ページネーション -->
        <%= paginate @requests, outer_window: 2 %>
      </div>
    </div>
  <% end %>
</div>