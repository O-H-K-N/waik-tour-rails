<% content_for(:title, t('.title', id: @user.id, name: @user.name)) %>
<div class="p-5">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title', id: @user.id, name: @user.name) %></h1>
      <!-- Admin::UsersControllerのupdateアクション -->
      <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
        <%= render 'admin/shared/error_message', object: f.object %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <% if current_user.id != @user.id %>
          <div class="form-group">
            <%= f.label :role %>
            <%= f.select :role, User.roles_i18n.invert, {}, class: 'form-control' %>
          </div>
        <% end %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>