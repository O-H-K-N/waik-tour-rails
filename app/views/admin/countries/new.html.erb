<% content_for(:title, t('.title'))%>
<div class="p-5">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <!-- Admin::CountriesControllerのupdateアクション -->
      <%= form_with model: @country, url: admin_countries_path(@country), local: true do |f| %>
        <%= render 'admin/shared/error_message', object: f.object %>
        <div class="form-group">
          <%= f.label :name, Country.human_attribute_name(:name) %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :name_ens, Country.human_attribute_name(:name_ens) %>
          <%= f.text_field :name_ens, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :iso, Country.human_attribute_name(:iso) %>
          <%= f.text_field :iso, class: 'form-control' %>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>