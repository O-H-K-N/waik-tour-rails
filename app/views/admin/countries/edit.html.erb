<% content_for(:title, t('.title', id: @country.id, name: @country.name)) %>
<div class="p-5">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title', id: @country.id, name: @country.name) %></h1>
      <!-- Admin::CountriesControllerのupdateアクション -->
      <%= form_with model: @country, url: admin_country_path(@country), local: true do |f| %>
        <%= render 'admin/shared/error_message', object: f.object %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :name_ens %>
          <%= f.text_field :name_ens, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :iso %>
          <%= f.text_field :iso, class: 'form-control' %>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>