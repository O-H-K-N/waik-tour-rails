<% content_for(:title, t('.title')) %>
<div class="p-5">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-9 mb-3">
      <!-- 検索窓 -->
      <%= render 'search_form', url: admin_countries_path %>
    </div>
    <div class="col-md-3 mb-3">
      <%= link_to t('defaults.new'), new_admin_country_path, class: 'btn btn-secondary' %>
    </div>
  </div>
  <% if @countries.present? %>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
          <tr>
            <th scope="col"><%= Country.human_attribute_name(:id) %></th>
            <th scope="col"><%= Country.human_attribute_name(:name) %></th>
            <th scope="col"><%= Country.human_attribute_name(:name_ens) %></th>
            <th scope="col"><%= Country.human_attribute_name(:iso) %></th>
            <th scope="col"></th>
          </tr>
          </thead>
          <tbody>
          <!-- 一覧表示のフォーム -->
          <%= render @countries %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <!-- ページネーション -->
        <%= paginate @countries, outer_window: 2 %>
      </div>
    </div>
  <% end %>
</div>