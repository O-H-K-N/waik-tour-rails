<% content_for(:title, t('.title')) %>
<div class="p-5">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <!-- 検索窓 -->
      <%= render 'search_form', url: admin_videos_path %>
    </div>
  </div>
  <% if @videos.present? %>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
          <tr>
            <th scope="col"><%= Video.human_attribute_name(:id) %></th>
            <th scope="col"><%= Video.human_attribute_name(:spot) %></th>
            <th scope="col"><%= Video.human_attribute_name(:video_id) %></th>
            <th scope="col"></th>
          </tr>
          </thead>
          <tbody>
          <!-- 一覧表示のフォーム -->
          <%= render partial: "admin/shared/video", collection: @videos %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <!-- ページネーション -->
        <%= paginate @videos, outer_window: 2 %>
      </div>
    </div>
  <% end %>
</div>